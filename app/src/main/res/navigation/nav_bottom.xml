<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_bottom"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.app.vibespace.ui.registration.MapLoadFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_homeFragment_to_profileHostFragment"
            app:destination="@id/profileHostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_homeFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_homeFragment_to_createPostFragment"
            app:destination="@id/createPostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_homeFragment_to_otherUserProfileFragment"
            app:destination="@id/otherUserProfileFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.app.vibespace.ui.profile.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_chat"
        >
        <action
            android:id="@+id/action_chatFragment_to_createPostFragment"
            app:destination="@id/createPostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_chatFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_chatFragment_to_profileHostFragment"
            app:destination="@id/profileHostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_chatFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.app.vibespace.ui.profile.FeedFragment"
        android:label="FeedFragment"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_profileHostFragment"
            app:destination="@id/profileHostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_feedFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_feedFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_feedFragment_to_createPostFragment"
            app:destination="@id/createPostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/profileHostFragment"
        android:name="com.app.vibespace.ui.profile.ProfileHostFragment"
        android:label="ProfileHostFragment"
        tools:layout="@layout/fragment_host_profile"
        >
        <action
            android:id="@+id/action_profileHostFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_profileHostFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_profileHostFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_profileHostFragment_to_createPostFragment"
            app:destination="@id/createPostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.app.vibespace.ui.profile.CreatePostFragment"
        android:label="CreatePostFragment"
        tools:layout="@layout/fragment_create_post"
        >
        <action
            android:id="@+id/action_createPostFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_createPostFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_createPostFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_createPostFragment_to_profileHostFragment"
            app:destination="@id/profileHostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_bottom"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/otherUserProfileFragment"
        android:name="com.app.vibespace.ui.profile.OtherUserProfileFragment"
        android:label="OtherUserProfileFragment" >

        <argument
            android:name="value"
            app:argType="string" />
    </fragment>
</navigation>