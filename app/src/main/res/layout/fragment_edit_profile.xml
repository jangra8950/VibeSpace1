<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
      <variable
         name="viewModel"
         type="com.app.vibespace.viewModel.profile.EditProfileViewModel" />
      <variable
          name="fragment"
          type="com.app.vibespace.ui.profile.EditProfileFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            style="@style/txtHeading"
            android:text="@string/edit_profile"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDrop"
            style="@style/text"
            android:text="@string/uni"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etUniversity" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etUniversity"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:background="@drawable/round_edit_profile"
            android:layout_marginTop="@dimen/_112sdp"

            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/dropDown"
                android:dropDownHeight="@dimen/_152sdp"
                android:text="@={viewModel.university}"
                android:textSize="@dimen/_14ssp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_edit_profile"
                android:inputType="none"
                android:cursorVisible="false"
                android:focusable="false"
                android:padding="@dimen/_2sdp"
                android:hint="@string/choose" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDrop1"
            style="@style/text"
            android:text="@string/sexuality"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etSexuality" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etSexuality"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:background="@drawable/round_edit_profile"
            android:layout_marginTop="@dimen/_42sdp"

            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etUniversity">

            <AutoCompleteTextView
                android:id="@+id/dropDown1"
                android:text="@={viewModel.sexuality}"
                android:dropDownHeight="@dimen/_122sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_edit_profile"
                android:inputType="none"
                android:cursorVisible="false"
                android:focusable="false"
                android:padding="@dimen/_2sdp"
                android:hint="@string/choose" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAge"
            style="@style/text"
            android:text="@string/age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etAge"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAge"
            style="@style/editText"
            android:text="@={viewModel.age}"
            android:elevation="0dp"
            android:background="@drawable/round_edit_profile"
            android:hint="28"
            android:importantForAutofill="no"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:maxLength="30"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etSexuality"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeight"
            style="@style/text"
            android:text="@string/height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etHeight"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etHeight"
            style="@style/editText"
            android:elevation="0dp"
            android:text="@={viewModel.height}"
            android:background="@drawable/round_edit_profile"
            android:hint="5.7 "
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:maxLength="30"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etAge"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOccuption"
            style="@style/text"
            android:text="@string/occupation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etOccuption"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etOccuption"
            style="@style/editText"
            android:text="@={viewModel.occuption}"
            android:elevation="0dp"
            android:background="@drawable/round_edit_profile"
            android:hint="Developer"
            android:importantForAutofill="no"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:maxLength="30"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etHeight"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            style="@style/button"
            android:onClick="@{(view)-> fragment.save(view)}"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etOccuption"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>