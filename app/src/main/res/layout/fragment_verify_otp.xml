<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.app.vibespace.viewModel.registration.OtpViewModel" />
        <variable
            name="fragment"
            type="com.app.vibespace.ui.registration.VerifyOtpFragment" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back"
        android:onClick="@{(view)->viewModel.onBack(view)}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVerifyCode"
        style="@style/txtHeading"
        android:text="@string/verifyCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        style="@style/text"
        android:text="@string/code"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVerifyCode"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmail"
        style="@style/text"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etOtpOne"
        style="@style/otp"
        android:text="@={viewModel.otp1}"
        android:layout_marginTop="@dimen/_24sdp"
        android:background="@drawable/round_otp"

        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/etOtpTwo"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etOtpTwo"
        style="@style/otp"
        android:text="@={viewModel.otp2}"
        android:background="@drawable/round_otp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="@+id/etOtpOne"
        app:layout_constraintEnd_toStartOf="@+id/etOtpThree"

        app:layout_constraintStart_toEndOf="@+id/etOtpOne"
        app:layout_constraintTop_toTopOf="@+id/etOtpOne" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etOtpThree"
        style="@style/otp"
        android:text="@={viewModel.otp3}"
        android:background="@drawable/round_otp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="@+id/etOtpTwo"
        app:layout_constraintEnd_toStartOf="@+id/etOtpFour"
        app:layout_constraintStart_toEndOf="@+id/etOtpTwo"
        app:layout_constraintTop_toTopOf="@+id/etOtpTwo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etOtpFour"
        style="@style/otp"
        android:text="@={viewModel.otp4}"
        android:imeOptions="actionDone"
        android:background="@drawable/round_otp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="@+id/etOtpThree"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etOtpThree"
        app:layout_constraintTop_toTopOf="@+id/etOtpThree" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recieve"
        android:visibility="gone"
         style="@style/text"
        android:text="@string/recieve"
        android:layout_marginTop="@dimen/_24sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etOtpFour"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resendCode"
        android:visibility="gone"
        style="@style/text"
        android:onClick="@{(view) -> fragment.onResetOtpTap(view)}"
        android:text="@string/resend"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recieve"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:padding="@dimen/_12sdp"
        android:text="@string/resend_code_time"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"

        app:layout_constraintEnd_toEndOf="@+id/etOtpFour"
        app:layout_constraintStart_toStartOf="@+id/etOtpOne"
        app:layout_constraintTop_toBottomOf="@+id/etOtpOne" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCode"
        style="@style/button"
        android:onClick="@{(view)-> fragment.onContinue(view)}"
        android:text="@string/Continue"
        android:layout_marginTop="@dimen/_92sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etOtpFour" />

    <include
        android:id="@+id/progressBar"
        layout="@layout/layout_progress_bar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>