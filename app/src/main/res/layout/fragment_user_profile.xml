<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.app.vibespace.ui.profile.UserProfileFragment" />

    </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/colorWhite">

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="@dimen/_10sdp"
           app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvAppName"
           style="@style/txtHeading"
           android:text="@string/vibespace"
           android:textColor="@color/colorPrimary"
           android:layout_marginTop="@dimen/_42sdp"
           android:layout_marginStart="@dimen/_32sdp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toStartOf="@id/ivSearchBar"
           />

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/ivSearchBar"
           app:srcCompat="@drawable/ic_search_bar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="@dimen/_12sdp"
           android:layout_marginTop="@dimen/_34sdp"
           android:layout_marginStart="@dimen/_92sdp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toEndOf="@id/tvAppName"
           app:layout_constraintEnd_toStartOf="@id/ivSetting"
           />

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/ivSetting"
           app:srcCompat="@drawable/ic_setting"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="@dimen/_12sdp"
           android:layout_marginEnd="@dimen/_32sdp"
           android:layout_marginTop="@dimen/_34sdp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toEndOf="@id/ivSearchBar"
           />

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/ivAvatar"
           app:srcCompat="@drawable/ic_avatar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/_32sdp"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintTop_toBottomOf="@id/tvAppName"
           app:layout_constraintStart_toStartOf="parent"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvProfileName"
           style="@style/text"
           android:fontFamily="@font/poppins_medium"
           android:layout_marginStart="@dimen/_30sdp"
           android:layout_marginTop="@dimen/_8sdp"
           app:layout_constraintTop_toBottomOf="@id/ivAvatar"
           app:layout_constraintStart_toStartOf="parent"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvFollowersCount"

           android:textColor="@color/colorBlack"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/_16ssp"
           android:layout_marginStart="@dimen/_56sdp"
           android:layout_marginTop="@dimen/_16sdp"
           app:layout_constraintTop_toBottomOf="@id/ivSearchBar"
           app:layout_constraintStart_toEndOf="@id/ivAvatar"
           app:layout_constraintBottom_toTopOf="@id/tvFollower"
           />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvFollower"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/colorEditTxt"
           android:text="@string/followers"
           android:fontFamily="@font/poppins_regular"
           android:textSize="@dimen/_12ssp"
           android:layout_marginStart="@dimen/_40sdp"
           app:layout_constraintTop_toBottomOf="@id/tvFollowersCount"
           app:layout_constraintStart_toEndOf="@id/ivAvatar"

           />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvFollowingCount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/colorBlack"
           android:textSize="@dimen/_16ssp"
           android:layout_marginStart="@dimen/_78sdp"
           android:layout_marginTop="@dimen/_16sdp"
           app:layout_constraintTop_toBottomOf="@id/ivSearchBar"
           app:layout_constraintStart_toEndOf="@id/tvFollowersCount"
           />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvFollowing"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/colorEditTxt"
           android:text="@string/following"
           android:fontFamily="@font/poppins_regular"
           android:textSize="@dimen/_12ssp"
           android:layout_marginEnd="@dimen/_34sdp"
           app:layout_constraintTop_toBottomOf="@id/tvFollowingCount"
           app:layout_constraintEnd_toEndOf="parent"
           />

       <androidx.constraintlayout.widget.Guideline
           android:id="@+id/guideline"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           app:layout_constraintGuide_percent="0.4"/>

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvBio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/BIO"
           android:padding="@dimen/_4sdp"
           android:textSize="@dimen/_12ssp"
           android:fontFamily="@font/poppins_bold"
           android:layout_marginStart="@dimen/_30sdp"
           android:layout_marginTop="@dimen/_32sdp"
           app:layout_constraintTop_toBottomOf="@id/tvProfileName"
           app:layout_constraintStart_toStartOf="parent"
           />

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/ivEditProfile"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:srcCompat="@drawable/ic_edit_profile"
           android:padding="@dimen/_6sdp"
           android:layout_marginTop="@dimen/_32sdp"
           android:layout_marginEnd="@dimen/_30sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tvProfileName"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvUniversity"
           style="@style/text"
           android:layout_width="0dp"
           android:text="@string/university"
           android:layout_marginStart="@dimen/_30sdp"
           android:layout_marginEnd="@dimen/_16sdp"
           android:layout_marginTop="@dimen/_20sdp"
           app:layout_constraintTop_toBottomOf="@id/tvBio"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@id/tvDataUniversity"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvDataUniversity"
           style="@style/text"
           android:layout_marginStart="0dp"
           android:layout_width="0dp"
           android:fontFamily="@font/poppins_medium"
           android:layout_marginTop="@dimen/_21sdp"
           android:layout_marginEnd="@dimen/_6sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/ivEditProfile"
           app:layout_constraintStart_toEndOf="@+id/guideline"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvSexuality"
           style="@style/text"
           android:text="@string/sexuality"
           android:layout_marginStart="@dimen/_30sdp"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintTop_toBottomOf="@id/tvDataUniversity"
           app:layout_constraintStart_toStartOf="parent"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvDataSexuality"
           style="@style/text"
           android:layout_width="0dp"
           android:layout_marginStart="0dp"
           app:layout_constraintEnd_toEndOf="parent"
           android:fontFamily="@font/poppins_medium"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintStart_toEndOf="@+id/guideline"
           app:layout_constraintTop_toBottomOf="@id/tvDataUniversity"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvAge"
           style="@style/text"
           android:text="@string/age"
           android:layout_marginStart="@dimen/_30sdp"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tvDataSexuality"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvDataAge"
           style="@style/text"
           android:layout_width="0dp"
           android:layout_marginStart="0dp"
           app:layout_constraintEnd_toEndOf="parent"
           android:fontFamily="@font/poppins_medium"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintStart_toEndOf="@+id/guideline"
           app:layout_constraintTop_toBottomOf="@id/tvDataSexuality"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvHeight"
           style="@style/text"
           android:text="@string/height"
           android:layout_marginStart="@dimen/_30sdp"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tvDataAge"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvDataHeight"
           style="@style/text"
           android:layout_width="0dp"
           android:layout_marginStart="0dp"
           app:layout_constraintEnd_toEndOf="parent"
           android:fontFamily="@font/poppins_medium"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintStart_toEndOf="@+id/guideline"
           app:layout_constraintTop_toBottomOf="@id/tvDataAge"
          />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvOccupation"
           style="@style/text"
           android:text="@string/occupation"
           android:layout_marginStart="@dimen/_30sdp"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tvDataHeight"
           />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvDataOccupation"
           style="@style/text"
           android:layout_width="0dp"
           android:layout_marginStart="0dp"
           app:layout_constraintEnd_toEndOf="parent"
           android:fontFamily="@font/poppins_medium"
           android:layout_marginTop="@dimen/_12sdp"
           app:layout_constraintStart_toEndOf="@+id/guideline"
           app:layout_constraintTop_toBottomOf="@id/tvDataHeight"
           />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnLogOut"
           style="@style/button"
           android:elevation="0dp"
           android:textAllCaps="false"
           android:fontFamily="@font/poppins_regular"
           android:text="@string/logout"
           android:textColor="@color/colorPrimary"
           android:layout_marginTop="@dimen/_20sdp"
           android:background="@drawable/round_button_logout"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tvDataOccupation"
           />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnDeleteAccount"
           style="@style/button"
           android:elevation="0dp"
           android:textAllCaps="false"
           android:fontFamily="@font/poppins_regular"
           android:text="@string/delete_account"
           android:textColor="@color/colorRed"
           android:layout_marginTop="@dimen/_8sdp"
           android:background="@drawable/round_delete_button"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/btnLogOut"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>