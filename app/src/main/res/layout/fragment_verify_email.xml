<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.app.vibespace.viewModel.registration.VerifyEmailViewModel" />
        <variable
            name="fragment"
            type="com.app.vibespace.ui.registration.VerifyEmailFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:tint="@color/colorBlack"
            android:onClick="@{(view)->fragment.onBack(view)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVerifyEmail"
            style="@style/txtHeading"
            android:text="@string/verifyEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etVerifyEmail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEmail"
            style="@style/text"
            android:text="@string/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etVerifyEmail" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etVerifyEmail"
            style="@style/editText"
            android:textColorHint="@color/colorTxt"
            android:textColor="@color/colorBlack"
            android:text="@={viewModel.email}"
            android:layout_marginTop="@dimen/_72sdp"
            android:hint="@string/edSignInEmail"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:maxLines="1"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVerifyEmail" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerifyEmail"
            style="@style/button"
            android:onClick="@{(view)-> fragment.onContinue(view)}"
            android:text="@string/Continue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etVerifyEmail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12ssp"
            android:text="@string/create"
            android:textColor="@color/colorTxt"
            android:layout_marginStart="@dimen/_64sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNewAccount"
            android:onClick="@{(view)->fragment.onSignIn(view)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorPrimary"
            android:text="@string/signIn"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_2sdp"
            app:layout_constraintStart_toEndOf="@+id/tvCreate"
            app:layout_constraintBottom_toBottomOf="parent" />

        <include
            android:id="@+id/progressBar"
            layout="@layout/layout_progress_bar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>