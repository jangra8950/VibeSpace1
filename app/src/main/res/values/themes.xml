<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VibeSpace" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/colorWhite</item>
    </style>

    <style name="Theme.VibeSpace" parent="Base.Theme.VibeSpace" >
        <item name="colorPrimary">@color/colorWhite</item>

    </style>
    <style name="textBold">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textRegular">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="txtHeading">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorEditTxt</item>
        <item name="android:layout_marginTop">@dimen/_52sdp</item>
    </style>
    <style name="text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
    </style>
    <style name="editText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_42sdp</item>
        <item name="android:background">@drawable/round_edit_text</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>
    <style name="inputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/round_edit_text</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colorTxt</item>
        <item name="android:layout_marginHorizontal">@dimen/_18sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintEnabled">false</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
    </style>

    <style name="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:background">@drawable/round_btn</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginHorizontal">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_82sdp</item>
    </style>

    <style name="otp">
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:digits">0123456789</item>
        <item name="android:padding">@dimen/_12sdp</item>

        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">phone</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:layout_marginHorizontal">@dimen/_6sdp</item>
        <item name="android:maxLength">1</item>
        <item name="android:hint">*</item>

        <item name="android:textColor">@color/colorBlack</item>
        <item name="hintTextColor">@color/colorTxt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_gravity">bottom</item>
    </style>
</resources>